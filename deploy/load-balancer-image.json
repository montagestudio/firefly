{
    "variables": {
        "do_api_key": null,
        "do_client_id": null,
        "snapshot_name": null,
        "home": "{{env `HOME`}}"
    },

    "builders": [{
        "type": "digitalocean",
        "api_key": "{{user `do_api_key`}}",
        "client_id": "{{user `do_client_id`}}",
        "image_id": 1505447,
        "region_id": 4,
        "size_id": 66,
        "private_networking": false,
		"state_timeout": "12m",
        "snapshot_name": "{{user `snapshot_name`}}",
        "droplet_name": "firefly-load-balancer-image"
    }],

    "provisioners": [{
        "type": "shell",
        "inline": ["sleep 30"]
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/authorized_keys",
        "destination": "/tmp/authorized_keys"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/sudoers",
        "destination": "/etc/sudoers.d/sudoers"
    }, {
        "type": "file",
        "source": "{{user `home`}}/deploy/files/30-haproxy.conf",
        "destination": "/etc/rsyslog.d/30-haproxy.conf"
    }, {
        "type": "shell",
        "script": "{{user `home`}}/deploy/provision/base.sh"
    }, {
        "type": "shell",
        "script": "{{user `home`}}/deploy/provision/load-balancer.sh"
    }, {
        "type": "file",
	    "source": "{{user `home`}}/deploy/files/haproxy.cfg",
	    "destination": "/etc/haproxy/haproxy.cfg"
    }]
}
