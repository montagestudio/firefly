{
    "variables": {
        "snapshot_name": null,
        "home": "{{env `HOME`}}",
        "build": "{{env `BUILD`}}",
        "base_image_id": null,
        "do_region": "{{env `REGION`}}"
    },

    "builders": [{
        "type": "digitalocean",
        "image": "{{user `base_image_id`}}",
        "region": "{{user `do_region`}}",
        "size": "512mb",
        "private_networking": false,
        "ssh_username": "root",
        "ssh_timeout": "12m",
        "state_timeout": "12m",
        "snapshot_name": "{{user `snapshot_name`}}",
        "droplet_name": "firefly-base-web-server-image"
    }],

    "provisioners": [{
        "type": "shell",
        "inline": ["sleep 30"]
    }, {
        "type": "shell",
        "script": "{{user `home`}}/deploy/provision/base-web-server.sh"
    }]
}
