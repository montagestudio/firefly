    "mmmagic": "0.3.5",
    "watchr": "2.3.3"
  },
  "devDependencies": {
    "jasmine-node": "~1.11.0",
    "istanbul": "~0.1.44",
    "jshint": "~2.3.0"
  },
  "subdomain": "firefly",
