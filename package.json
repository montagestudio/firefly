{
  "name": "firefly",
  "private": true,
  "version": "0.30.1",
  "description": "Server for filament in the browser",
  "main": "index.js",
  "scripts": {
    "install": "scripts/npm-recursive.sh install && npm install --prefix static/filament",
    "prune": "scripts/npm-recursive.sh prune",
    "generate-local-certificate": "scripts/generate-local-certificate.sh",
    "lint": "jshint --verbose .",
    "test": "npm run lint && scripts/npm-recursive.sh test",
    "coverage": "istanbul test -x 'spec/**' jasmine-node -- --junitreport spec && jshint --verbose .",

    "start": "npm run start:traefik && npm run start:app",
    "start:traefik": "scripts/deploy-stack.sh traefik",
    "start:app": "export PROJECT_ROOT=$(pwd) && scripts/deploy-stack.sh firefly",
    "stop": "npm run stop:app && npm run stop:traefik",
    "stop:traefik": "scripts/remove-stack.sh traefik",
    "stop:app": "scripts/remove-user-stacks.sh && scripts/remove-stack.sh firefly",
    "restart": "npm run stop && npm run start",
    "restart:traefik": "npm run stop:traefik && npm run start:traefik",
    "restart:app": "npm run stop:app && npm run start:app",

    "deploy": "deploy/vagrant/deploy.sh",
    "login-debug": "vagrant ssh login -c 'sudo pkill -USR1 -u montage -f \"nodejs /srv/firefly\" && node-inspector --web-port=8104'",
    "login-remote-debug": "vagrant ssh login -c 'sudo pkill -USR1 -u montage -f \"nodejs /srv/firefly\"'",
    "project-debug": "vagrant ssh project -c 'sudo pkill -USR1 -u montage -f \"nodejs /srv/firefly\" && node-inspector --web-port=8105'",
    "project-remote-debug": "vagrant ssh project -c 'sudo pkill -USR1 -u montage -f \"nodejs /srv/firefly\"'",
    "mop": "deploy/build/mop.sh",
    "enter-mop-mode": "deploy/vagrant/enter-mop-mode.sh",
    "exit-mop-mode": "deploy/vagrant/exit-mop-mode.sh"
  },
  "devDependencies": {
    "jshint": "^2.9.5",
    "merge-yaml-cli": "^1.1.2",
    "minit": "^0.5.7",
    "rewire": "^2.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/declarativ/firefly.git"
  },
  "subdomain": "firefly",
  "engines": {
    "node": "4.8.x"
  }
}
