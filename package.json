{
  "name": "firefly",
  "private": true,
  "version": "0.0.1",
  "description": "Server for filament in the browser",
  "main": "index.js",
  "scripts": {
    "test": "if [ \"`uname`\" = \"Linux\" ]; then npm run tests; else echo Running tests in VM; vagrant ssh login -c 'cd /srv/firefly; npm run tests'; fi",
    "tests": "istanbul test jasmine-node -- --junitreport spec && jshint --verbose .",

    "start": "vagrant up || (echo 'To run Aurora please install Vagrant from http://www.vagrantup.com/downloads.html' && exit 1)",
    "deploy": "deploy/vagrant/deploy.sh",
    "stop": "vagrant halt && echo 'Run `vagrant destroy` to completely remove the VMs (this will make `npm start` a lot slower)'",

    "login-logs": "vagrant ssh login -c 'tail -f /home/montage/stdout.log'",
    "project-logs": "vagrant ssh project -c 'tail -f /home/montage/stdout.log'",
    "login-debug": "vagrant ssh login -c 'sudo pkill -USR1 -f \"nodejs /srv/firefly\"' && vagrant ssh login -c 'node-inspector --web-port=8104'",
    "login-remote-debug": "vagrant ssh login -c 'sudo pkill -USR1 -f \"nodejs /srv/firefly\"'",
    "project-debug": "vagrant ssh project -c 'sudo pkill -USR1 -f \"nodejs /srv/firefly\"' && vagrant ssh project -c 'node-inspector --web-port=8105'",
    "project-remote-debug": "vagrant ssh project -c 'sudo pkill -USR1 -f \"nodejs /srv/firefly\"'",
    "project-clone": "vagrant ssh project -c 'sudo su montage -c \"cd /srv/clone && bash\"'",

    "update-dependencies": "rm -rf node_modules && npm install && npm dedupe && git add --update node_modules && git add node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/declarativ/firefly.git"
  },
  "dependencies": {
    "joey": "~1.3.1",
    "optimist": "~0.6.0",
    "q-io": "~1.10.4",
    "websocket.io": "~0.2.1",
    "q-connection": "~0.5.6",
    "q": "~0.9.7",
    "uuid": "~1.4.1",
    "minimatch": "~0.2.12",
    "logging": "~2.0.21",
    "xmlhttprequest": "~1.6.0",
    "minit": "~0.3.10",
    "htmlparser2": "3.4.0",
    "npm": "1.3.23",
